<p><%= t('devise.mailer.email_changed.greeting', recipient: @resource.name) %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t('devise.mailer.password_changed.message_unconfirmed', email: @resource.unconfirmed_email) %></p>
<% else %>
  <p><%= t('devise.mailer.password_changed.message_unconfirmed', email: @resource.email) %></p>
<% end %>
